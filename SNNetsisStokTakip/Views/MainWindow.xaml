<Window x:Class="SNNetsisStokTakip.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SNNetsisStokTakip"
        mc:Ignorable="d"
        Title="MainWindow" Height="495.938" Width="1020.312">
    <Grid>
        <ComboBox IsEditable="True"
                  Width="200"
                  IsTextSearchEnabled="False"
                  x:Name="cb"
                  PreviewTextInput="Cb_OnPreviewTextInput"
                  ItemsSource="{Binding ItemList}"
                  Text="{Binding SearchTextText}" Margin="224,10,0,0" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>

        <Button Name="btnOpenExcel"  Content="Open Excel Stok List" 
                HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Height="32"
                Click="btnOpenExcel_Click"/>
        <DataGrid Name="dgExcel" 
                  HorizontalAlignment="Left" Height="408" Margin="10,47,0,0" VerticalAlignment="Top" Width="414"
                    CanUserAddRows="False"  CanUserDeleteRows="False" CanUserSortColumns="False" />
        <TextBox 
            x:Name="txtServer"
            HorizontalAlignment="Left" Height="34" Margin="521,14,0,0" TextWrapping="Wrap" Text="EOPYNETSRV" VerticalAlignment="Top" Width="164"/>
        <Label Content="Server" HorizontalAlignment="Left" Margin="467,24,0,0" VerticalAlignment="Top"/>
        <TextBox 
            x:Name="txtUser"
            HorizontalAlignment="Left" Height="34" Margin="521,53,0,0" TextWrapping="Wrap" Text="sa" VerticalAlignment="Top" Width="164"/>
        <Label Content="User" HorizontalAlignment="Left" Margin="467,63,0,0" VerticalAlignment="Top"/>
        <TextBox 
            x:Name="txtPass"
            HorizontalAlignment="Left" Height="34" Margin="521,92,0,0" TextWrapping="Wrap" Text="Aspendos1" VerticalAlignment="Top" Width="164"/>
        <Label Content="Pass" HorizontalAlignment="Left" Margin="467,102,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnConnect"  Content="Connect Netsis" 
            HorizontalAlignment="Left" Margin="540,151,0,0" VerticalAlignment="Top" Width="127" Height="32"
            Click="btnConnect_Click"/>
        <DataGrid x:Name="dgDb" 
            HorizontalAlignment="Left" Height="251" Margin="447,204,0,0" VerticalAlignment="Top" Width="555"
              CanUserAddRows="False"  CanUserDeleteRows="False" CanUserSortColumns="False" />
        <ComboBox Name="cbDbList"
            Width="200"
            IsTextSearchEnabled="False"
            PreviewTextInput="Cb_OnPreviewTextInput"
            SelectionChanged="cbDbList_SelectionChanged"
            Margin="682,151,0,0" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>
        <Button x:Name="btnGetStHarTable"  Content="Get Stocks" 
            HorizontalAlignment="Left" Margin="755,188,0,0" VerticalAlignment="Top" Width="127" Height="32"
            Click="btnGetStHarTable_Click"/>
        <Button x:Name="btnProcessStart"  Content="Get Stocks" 
            HorizontalAlignment="Left" Margin="285,423,0,0" VerticalAlignment="Top" Width="127" Height="32"
            Click="btnProcessStart_Click"/>
        <Label Name="lblProgresRecord" Content="Server" HorizontalAlignment="Left" Margin="10,427,0,0" VerticalAlignment="Top" Width="260" Background="#FFC8FFE8"/>
        <Button x:Name="btnToCsv"  Content="Save XLS" 
            HorizontalAlignment="Left" Margin="875,423,0,0" VerticalAlignment="Top" Width="127" Height="32"
            Click="btnToCsv_Click"/>
    </Grid>
</Window>
